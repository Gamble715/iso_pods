<div class="center">
	<h1>Report an Issue</h1>
	<%= form_for 'issue', method:"POST", url: {action: "issue"}, html: {class: "nifty_form"} do |f| %>
		  <%= f.text_field :email, placeholder: "Email", style: "height:50px;width:500px;font-size:2em;text-align:left;"%> <br>
		  <%= f.text_area :message, placeholder: "Message", style: "height:200px;width:500px;font-size:2em;text-align:left;"%> <br>
	    <%= submit_tag "Report", class: "btn btn-success btn-lg nav-btns", style: "margin-top:20px;"%>
	<% end %>
</div>